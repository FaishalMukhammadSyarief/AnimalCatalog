<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Title">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Subtitle">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.Description">
        <item name="android:textSize">16sp</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:background">@drawable/shape_round</item>
    </style>

    <style name="ToolbarTitle">
        <item name="fontFamily">@font/varela_round_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>